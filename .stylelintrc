{
  "extends": [
    "stylelint-config-standard"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "syntax": "scss",
  "rules": {
    "order/properties-alphabetical-order": false,
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["extend", "include", "mixin", "for"]
    }],
    "selector-pseudo-class-no-unknown": [true, {
      "ignorePseudoClasses": ["global"]
    }]
  }
}
